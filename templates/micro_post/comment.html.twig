 {% extends 'base.html.twig' %}

{% block title %}Post - Add Comment {% endblock %}

{% block bread %} 
 > <a href="{{ path('app_micro_post_show', {post:post.id})}}">Post</a> > Comment
{% endblock %}

{% block body %}
    {{ include('micro_post/_post.html.twig', {post:post}) }}

    {{ form_start(form) }}
        <div>{{ form_errors(form) }}</div>       
        <div>
            {{ form_label(form.text,'Enter the comment',  {'label_attr': {'class':'block text-sm text-gray-700 dark:text-gray-300 font-medium'}}) }}
            {{ form_widget(form.text, {'attr':{'class':'dblock w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 mt-1 mb-2'}}) }}
            {{ form_errors(form.text)}}
        </div>
        <div>
            <button type="submit" class="block w-full shadow-sm border-greened bg-greeneddark hover:border-greeneddark hover:bg-greened  text-white rounded-md border p-2 mt-4 mb-2">Add comment</button>
        </div>
    {{ form_end(form) }}
{% endblock %}
