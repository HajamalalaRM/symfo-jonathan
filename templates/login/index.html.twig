{% extends 'base.html.twig' %}

 
{% block title %}
    Login
{% endblock %}


 {% block body %}
    <form action="{{ path('app_login') }}" method="POST">
        <div>
            <label class="block text-sm text-gray-700 dark:text-gray-300 font-medium">Email</label>
            <input type="text" class="dblock w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 mt-1 mb-2" name="_username" value="{{lastUsername}}"/>
        </div>

        <div>
            <label class="block text-sm text-gray-700 dark:text-gray-300 font-medium">Password</label>
            <input type="password" class="dblock w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 mt-1 mb-2" name="_password"/>
        </div>
        <input type="hidden"  name="_target_path" value="/"/>
        <button type="submit" class="block w-full shadow-sm border-transparent bg-indigo-600 hover:bg-indigo-700 text-white rounded-md border p-2 mt-4 mb-2">login</button>
    </form>
 {% endblock %}